{
  "name": "@fosterg4/mcpsaver",
  "version": "1.0.2",
  "description": "MCP server for optimizing code references and reducing token usage through smart caching and AST parsing",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "bin": {
    "mcpsaver": "dist/index.cjs"
  },
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist/**/*",
    "vendor/grammars/**/*",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "example-mcp-config.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "build:bundle": "tsup",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src/**/*.ts",
    "test": "jest --config jest.config.cjs",
    "check:main": "npm run build && tsx scripts/check-main.ts",
    "ci": "npm run type-check && npm run lint && npm test && npm run build",
    "prepublishOnly": "npm run clean && npm run build:bundle",
    "publish:local": "npm pack",
    "link:global": "npm run build:bundle && npm link",
    "smoke:tree-sitter": "tsx scripts/smoke-tree-sitter.ts"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "mcpsaver",
    "model-context-protocol",
    "token-optimization",
    "ast-parsing",
    "code-analysis"
  ],
  "author": "fosterg4",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "fast-diff": "^1.3.0",
    "lru-cache": "^11.1.0",
    "tree-sitter": "^0.25.0",
    "tree-sitter-cli": "^0.25.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
